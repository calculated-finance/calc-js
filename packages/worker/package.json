{
  "name": "@template/worker",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Worker modules for CALC",
  "repository": {
    "type": "git",
    "url": "https://github.com/calculated-finance/calc-js",
    "directory": "packages/worker"
  },
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "bundle": "tsx scripts/bundle-handlers.ts",
    "build": "pnpm build-esm && pnpm build-annotate && pnpm build-cjs && build-utils pack-v2",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "start:producer": "node build/esm/producer.js",
    "dev:producer": "tsx src/producer.ts",
    "dev:indexer": "tsx src/indexer.ts"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@cosmjs/cosmwasm-stargate": "^0.34.0",
    "@cosmjs/crypto": "^0.34.0",
    "@cosmjs/encoding": "^0.34.0",
    "@cosmjs/proto-signing": "^0.34.0",
    "@cosmjs/stargate": "^0.34.0",
    "@cosmjs/tendermint-rpc": "^0.36.0",
    "@effect/platform": "latest",
    "@effect/platform-node": "latest",
    "@template/domain": "workspace:^",
    "cosmjs-types": "0.9.0",
    "dotenv": "^17.2.2",
    "effect": "latest"
  },
  "devDependencies": {
    "@effect/language-service": "^0.37.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.20.5"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}